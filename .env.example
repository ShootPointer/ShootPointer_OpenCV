# =========================
# 기본 자르기 길이(초)
# =========================
DEFAULT_PRE=5.0
DEFAULT_POST=5.0

# =========================
# 최대 클립 수
# =========================
MAX_CLIPS=10

# =========================
# 자동 후보(오디오) 파라미터
# - silencedetect로 무음 구간을 찾고,
#   무음이 아닌 구간의 중앙값을 후보로 사용
# =========================
SILENCE_THRESHOLD_DB=-28   # (더 낮추면 더 민감)
SILENCE_MIN_DUR=0.30       # 무음으로 인정할 최소 지속시간(초)
AUTO_TOPK=5                # 자동 후보 상위 개수

# =========================
# 등번호 감지(OpenCV + Tesseract) 파라미터
# =========================
JERSEY_SAMPLE_FPS=1.5      # 샘플링 FPS (초당 추출 프레임 수)
JERSEY_MIN_SEG_DUR=1.2     # 최종 구간 최소 길이(초)
JERSEY_MERGE_GAP=2.0       # 인접 시점 병합 간격(초)
JERSEY_TESSERACT_PSM=7     # Tesseract PSM (7=한 줄 가정)
JERSEY_TESSERACT_OEM=3     # Tesseract OEM (3=LSTM 기본)
JERSEY_NUM_CONF=0.5        # 숫자 인식 신뢰도 하한(0~1)

# (필요 시) 프레임 썸네일 추출 API 기본값도 여기서 조정 가능
# FRAMES_DEFAULT_FPS=0.5
# FRAMES_DEFAULT_MAX=40
# FRAMES_DEFAULT_WIDTH=640

# =========================
# 실행/안정화 설정
# =========================
LOG_LEVEL=INFO            # DEBUG/INFO/WARNING/ERROR
REQUEST_LOG_BODY=false    # 큰 파일 업로드가 많아서 기본 false

# 서브프로세스 타임아웃(초)
FFMPEG_TIMEOUT_SEC=120
OCR_TIMEOUT_SEC=30

# 업로드 제한 (선택) - 바이트. 예) 200MB = 209715200
MAX_UPLOAD_BYTES=209715200